<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="305dp"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:text="관광지 이름"
            android:textColor="#FF8000"
            android:textSize="28sp"
            tools:layout_editor_absoluteX="45dp"
            tools:layout_editor_absoluteY="297dp" />

        <ImageButton
            android:id="@+id/moveMap"
            android:layout_width="54dp"
            android:layout_height="50dp"
            android:background="#00ff0000"
            android:src="@drawable/ic_baseline_map_24" />

        <ImageButton
            android:id="@+id/moveCategori"
            android:layout_width="54dp"
            android:layout_height="50dp"
            android:background="#00ff0000"
            android:src="@drawable/ic_baseline_list_24" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvAddr"
        android:layout_width="332dp"
        android:layout_height="43dp"
        android:gravity="center_horizontal"
        android:text="관광지 주소"
        android:textColor="#FF8000"
        android:textSize="28sp"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="297dp" />


    <TextView
        android:id="@+id/tvPnum"
        android:layout_width="332dp"
        android:layout_height="45dp"
        android:gravity="center_horizontal"
        android:text="관광지 번호"
        android:textColor="#FF8000"
        android:textSize="28sp"
        tools:layout_editor_absoluteX="43dp"
        tools:layout_editor_absoluteY="297dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="381dp"
        android:layout_height="179dp"
        android:adjustViewBounds="true"
        android:gravity="center_horizontal"
        tools:layout_editor_absoluteX="28dp"
        tools:layout_editor_absoluteY="45dp"
        tools:srcCompat="@tools:sample/avatars" />

    <ScrollView
        android:id="@+id/bio_scroll"
        android:layout_width="345dp"
        android:layout_height="147dp">
        android:orientation="vertical"

        <TextView
            android:id="@+id/tvOvviwe"
            android:layout_width="match_parent"
            android:layout_height="271dp"
            android:gravity="center_horizontal"
            android:text="간략소개"
            tools:layout_editor_absoluteX="173dp"
            tools:layout_editor_absoluteY="45dp" />
    </ScrollView>

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="사진 불러오기"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="488dp"
        android:background="@drawable/mine" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="근처 숙박업소 확인하기"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="488dp"
        android:background="@drawable/mine"/>

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="찜하기"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="488dp"
        android:background="@drawable/mine"/>/>

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="날씨 보기"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="488dp"
        android:background="@drawable/mine"/><![CDATA[







    />





]]>
</LinearLayout>